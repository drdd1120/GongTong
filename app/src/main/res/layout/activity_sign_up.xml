<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/icon_gongtong"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:textStyle="bold"
            android:text="성명"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/name"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/name"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_round"
            android:hint="ex)홍길동"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/birth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nameTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:textSize="10dp"/>


        <TextView
            android:id="@+id/birthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="4dp"
            android:text="생년월일"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/birth"
            app:layout_constraintBottom_toTopOf="@+id/birth"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/birth"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round"
            android:hint="ex)19001231"
            android:imeOptions="flagNoExtractUi"
            android:inputType="date"
            android:maxLength="8"
            android:padding="10dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/birthTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/birth"
            app:layout_constraintTop_toBottomOf="@+id/birth"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="4dp"
            android:textStyle="bold"
            android:text="보호자 연락처"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/phone"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:hint="ex)010xxxxyyyy"
            android:maxLength="11"
            android:textSize="12sp"
            android:imeOptions="flagNoExtractUi"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birth"
            android:background="@drawable/button_round"/>

        <TextView
            android:id="@+id/phoneTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#66A2D8"
            android:text="등록"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>